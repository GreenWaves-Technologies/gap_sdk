{
  "@includes@": [ "chips/gap/gap.json" ],

  "board": {
    "name": "gapoc_b",
    "devices": {
      "flash": {
        "@include@" : "devices/hyperflash.json",
        "cs": 1
      },
      "ram": {
        "@include@" : "devices/hyperram.json",
        "cs": 0
      },
      "camera": {
        "@include@": "devices/camera.json",
        "interface": "cpi0",
        "ctrl_interface": "i2c1"
      },
      "display": {
        "@include@": "devices/lcd_ili9341.json",
        "interface": "spim1",
        "ctrl_interface": "gpio0",
        "enabled": false,
        "cs": 0
      }
    }
  },

  "runner": {
    "config": {
      "boot-mode": "rom_hyper",
      "flash_type": "hyper",
      "default_profile": "hyper"
    }
  },

  "rt": {
    "config": {
      "bsp": true
    }
  },

  "debug_bridge": {
    "config": {
      "cable": {
        "type": "ftdi",
        "system_reset_gpio": 9,
        "jtag_reset_gpio": 8,
        "reverse_reset": false,
        "vendor": "0x15ba",
        "product": "0x002b"
      }
    }
  }
}
