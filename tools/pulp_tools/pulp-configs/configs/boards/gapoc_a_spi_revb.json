{
  "includes": [ "chips/gap_rev1/gap_rev1.json" ],

  "board": {
    "name": "gapoc_a",
    "devices": {
      "spiflash": {
        "include" : "devices/spiflash.json",
        "interface": "spim0",
        "cs": 0
      },
      "spiram": {
        "include" : "devices/spiram.json",
        "interface": "spim0",
        "cs": 1
      },
      "camera": {
        "include": "devices/camera.json",
        "interface": "cpi0",
        "ctrl_interface": "i2c1"
      },
      "display": {
        "include": "devices/lcd_ili9341.json",
        "interface": "spim1",
        "ctrl_interface": "gpio0",
        "enabled": false,
        "cs": 0
      }
    }
  },

  "rt": {
    "config": {
      "bsp": true
    }
  },

  "runner": {
    "config": {
      "boot-mode": "rom_spim",
      "flash_type": "spi"
    }
  },

  "debug_bridge": {
    "config": {
      "cable": {
        "type": "ftdi",
        "system_reset_gpio": 9,
        "jtag_reset_gpio": 8,
        "reverse_reset": false
      }
    }
  }
}
