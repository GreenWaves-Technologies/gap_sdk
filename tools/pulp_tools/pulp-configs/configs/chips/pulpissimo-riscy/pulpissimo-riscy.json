{
  "config_type": "generator",
  "generator": "generators/v1/config_gen",

  "board": {
    "devices": {
      "spiflash": {
        "includes": ["devices/spiflash.json"],
        "interface": "spim0",
        "cs": 0
      },
      "uart": {
        "includes": ["devices/uart_tb.json"],
        "interface": "uart0"
      },
      "camera": {
        "includes": ["devices/camera.json"],
        "interface": "cpi0",
        "ctrl_interface": "i2c1"
      },
      "jtag_proxy": {
        "includes": ["devices/jtag_proxy.json"]
      }
    }
  },

  "chip": "pulpissimo",
    
  "padframe": {
    "content": "chips/pulpissimo-riscy/padframe.json"
  },

  "soc": {
    
    "base": "0x1A000000",
    "size": "0x06000000",

    "fc": {
      "core"        : "ri5ky_v2",
      "cluster_id"  : 31,
      "core_id"     : 0,
      "fetch_enable": true,
      "boot_addr"   : "0x1C008000"
    },

    "rom": {
      "version": 2,
      "base": "0x1A000000",
      "size": "0x00002000"
    },

    "l2": {
      "base": "0x1C000000",
      "size": "0x00080000",
      "is_partitioned": true,

      "priv0": {
        "base"         : "0x1C000000",
        "size"         : "0x00008000"
      },

      "priv0_alias": {
        "base"         : "0x00000000",
        "size"         : "0x00008000"
      },

      "priv1": {
        "base"         : "0x1C008000",
        "size"         : "0x00008000"
      },

      "shared": {
        "nb_banks"     : 4,
        "interleaving_bits" : 2,
        "base"         : "0x1C010000",
        "size"         : "0x00070000"
      }
    },

    "peripherals": {

      "base": "0x1A100000",
      "size": "0x00100000",

      "flls": {
        "fll": {
          "version"      : 1,
          "base"         : "0x1A100000",
          "size"         : "0x00000010",
          "targets"      : [ "soc" ]
        },

        "fll_periph": {
          "version"      : 1,
          "base"         : "0x1A100010",
          "size"         : "0x00000010",
          "targets"      : [ "periph" ]
        }
      },

      "fll_ctrl": {
        "version"      : 3
      },

      "gpio": {
        "version"      : 2,
        "base"         : "0x1A101000",
        "size"         : "0x00001000"
      },

      "udma": {
        "content"      : "chips/pulpissimo-riscy/udma.json",
        "base"         : "0x1A102000",
        "size"         : "0x00002000"
      },

      "apb_soc_ctrl": {
        "base"         : "0x1A104000",
        "size"         : "0x00001000"
      },

      "soc_eu": {
        "version"      : 1,
        "base"         : "0x1A106000",
        "size"         : "0x00001000"
      },

      "fc_itc": {
        "version"      : 1,
        "base"         : "0x1A109800",
        "size"         : "0x00000800",
        "irq": {
          "evt_sw_event0"       : 0,
          "evt_sw_event2"       : 2,
          "evt_sw_event1"       : 1,
          "evt_sw_event3"       : 3,
          "evt_sw_event4"       : 4,
          "evt_sw_event5"       : 5,
          "evt_sw_event6"       : 6,
          "evt_sw_event7"       : 7,

