          "evt_timer1"          : 11,

          "evt_clkref"          : 14,
          "evt_gpio"            : 15,
          "evt_rtc"             : 16,

          "evt_adv_timer0"      : 17,
          "evt_adv_timer1"      : 18,
          "evt_adv_timer2"      : 19,
          "evt_adv_timer3"      : 20,

          "evt_cluster_not_busy": 21,
          "evt_cluster_pok"     : 22,
          "evt_cluster_cg_ok"   : 23,
          "evt_picl_ok"         : 24,
          "evt_scu_ok"          : 25,

          "evt_soc_evt"         : 26,
          "evt_queue_error"     : 29
