      },

      "fc_timer": {
        "version"      : 2,
        "base"         : "0x1A10B000",
        "size"         : "0x00001000"
      },

      "stdout": {
        "version"      : 3,
        "base"         : "0x1A10F000",
        "size"         : "0x00001000"
      },

      "fc_dbg_unit": {
        "version"      : 1,
        "base"         : "0x1A110000",
        "size"         : "0x00008000"
      }

    }
  },
  "soc_events": {
    "soc_evt_spim0_rx"        : 0,
    "soc_evt_spim0_tx"        : 1,
    "soc_evt_spim1_rx"        : 2,
    "soc_evt_spim1_tx"        : 3,
    "soc_evt_hyper0_rx"       : 4,
    "soc_evt_hyper0_tx"       : 5,
    "soc_evt_uart0_rx"        : 6,
    "soc_evt_uart0_tx"        : 7,
