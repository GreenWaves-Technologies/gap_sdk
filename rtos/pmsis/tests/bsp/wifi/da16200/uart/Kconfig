menu "DA16200 Menu"

    choice BOARD
        default BOARD_GAP9_EVK
    endchoice

    config REQUIREMENTS_WIFI_DA16200
        bool
        default y
        select BSP_DRIVER_TRANSPORT_DA16200
        select PMSIS_IMPLEM_UDMA_TIMEOUT
        select PMSIS_GAP9_IMPLEM_UDMA_UART

    config UART_FLOW_CONTROL
        bool "Enable UART flow control"
        default y
        help
            Use UART with flow control

endmenu

source "$(GAP_SDK_HOME)/utils/kconfig/Kconfig"
