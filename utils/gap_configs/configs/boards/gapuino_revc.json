{
  "@includes@": [ "chips/gap8_revc/gap8_revc.json" ],

  "board": {
    "name": "gapuino",
    "devices": {
      "flash": {
        "@include@" : "devices/hyperflash.json",
        "cs": 1
      },
      "ram": {
        "@include@" : "devices/hyperram.json",
        "cs": 0
      },
      "camera": {
        "@include@": "devices/camera.json",
        "interface": "cpi0",
        "ctrl_interface": "i2c1"
      },
      "display": {
        "@include@": "devices/lcd_ili9341.json",
        "interface": "spim1",
        "ctrl_interface": "gpio19",
        "enabled": false,
        "cs": 0
      }
    }
  },

  "rt": {
    "config": {
      "bsp": true
    }
  },

  "openocd": {
    "config": {
      "board": "target/gap8revb.tcl"
    }
  },

  "runner": {
    "config": {
      "boot-mode": "rom_hyper",
      "flash_type": "hyper",
      "default_profile": "hyper"
    }
  },

  "debug_bridge": {
    "config": {
      "cable": {
        "type": "ftdi@digilent",
        "system_reset_gpio": 4,
        "jtag_reset_gpio": 6,
        "reverse_reset": true,
        "vendor": "0x0403",
        "product": "0x6010"
      }
    }
  }

}
